{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 350,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/ldow0002/assignment2/main/custom.geo_topo.json",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "transform": [
    {
      "lookup": "properties.sovereignt",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ldow0002/assignment2/main/Movies.csv"
        },
        "key": "Country",
        "fields": ["Movies"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Movies",
      "title": "Number of Movies",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [100, 1000, 10000, 15000],
        "range": ["#E9C9BE", "#D99D8D", "#BE5046", "#B31F2B", "#96443A"]
      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "Movies", "type": "quantitative"}
    ]
  },
  "config": {}
}
